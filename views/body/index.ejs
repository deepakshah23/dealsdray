
    <% layout('/layouts/boilerplate') %>
<body>
        <div  style="height: 80vh; text-align: center;">
            <div class="card col-row-4 m-3  " >

                <h1 class="border mb-3 bg-secondary">Dashboard</h1>

                <% if(employees.length==0){ %>
                    <h1>Empty</h1>
                    <a href="/registration"><button class="btn btn-primary">Create Employee</button></a>
                    <% } %>
                <% if(employees.length!=0){ %>   
                    <table class="table">
                        <tr>
                            <!-- <th scope="col">#</th> -->
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Contact</th>
                            <th scope="col">Designation</th>
                            <th scope="col">Gender</th>
                            <th scope="col">Course</th>
                        </tr>
                        <% for(employee of employees){ %>
                            <tr>
                                <!-- <th scope="row">1</th> -->
                                <td><%= employee.name  %></td>
                                <td><%= employee.email  %></td>
                                <td><%= employee.contact %></td>
                                <td><%= employee.designation  %></td>
                                <td><%= employee.gender  %></td>
                                <td><%= employee.course  %></td>
                                <% if(currentUser) {%>
                                <td><a href="/edit/<%= employee.id  %>"><button class="btn btn-primary">Edit</button></a></td>
                                <td><form method="post" action="/home/<%= employee.id %>?_method=delete">
                                    <button class="btn btn-danger">Delete</button>
                                </form></td>
                                <% } %>
                            </tr>
                            <% } %>
                        </table>
                       
                    <% } %>
            </div>
        </div>  
</body>

    